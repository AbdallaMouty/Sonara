---
import '../global.css';
import data from '../lib/data.json';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<main class="w-full md:w-3/4 lg:w-1/2 mx-auto p-10 lg:p-20">
			<h1 class="font-bold text-5xl sticky top-0 bg-bg/50 backdrop-blur-sm py-3 border-b border-b-table-bg">{data.language}</h1>
			<section class="p-3">
				<p class="text-md text-secondary">{data.description}</p>
				<div class="w-full py-5">
					<h3 class="text-3xl text-accent bg-secondary-bg w-fit p-1 px-2 rounded-full">#Phonology:</h3>
					<div class="w-full flex divide-secondary border border-secondary mt-3 rounded-md bg-table-bg">
						<div class="w-full h-full flex flex-col items-center justify-between divide-y divide-secondary">
							{data.phonology.map((p)=>(
								<div class="w-full h-full flex items-center justify-between gap-0">
									<span class="text-center w-full h-full max-w-1/4 py-3">{p.aspect}</span>
									<span class="w-full pl-3 h-20 border-l border-secondary py-3">{p.description}</span>
								</div>
							))}
						</div>
					</div>
				</div>
				<div class="w-full py-5">
					<h3 class="text-3xl text-accent bg-secondary-bg w-fit p-1 px-2 rounded-full">#Grammar:</h3>
					<div class="w-full flex divide-secondary border border-secondary mt-3 rounded-md bg-table-bg">
						<div class="w-full h-full flex flex-col items-center justify-between divide-y divide-secondary">
							{data.grammar.map((p)=>(
								<div class="w-full h-full flex items-center justify-between gap-0">
									<span class="text-center w-full h-full max-w-1/4 py-3">{p.rule}</span>
									<span class="w-full pl-3 h-20 border-l border-secondary py-3">{p.description}</span>
								</div>
							))}
						</div>
					</div>
				</div>
				<div class="w-full py-5">
					<h3 class="text-3xl text-accent bg-secondary-bg w-fit p-1 px-2 rounded-full">#Root System:</h3>
					<div class="w-full flex divide-secondary border border-secondary mt-3 rounded-md bg-table-bg">
						<div class="w-full h-full flex flex-col items-center justify-between divide-y divide-secondary">
							{data.root_system.map((p)=>(
								<div class="w-full h-fit flex items-center justify-between gap-0">
									<span class="text-center w-full h-full max-w-1/4 py-3">{p.root}</span>
									<span class="w-1/4 pl-3 h-20 border-l border-secondary py-3">{p.concept}</span>
									<span class="w-1/4 pl-3 h-20 border-l border-secondary py-3">{p.noun}</span>
									<span class="w-1/4 pl-3 h-20 border-l border-secondary py-3">{p.verb}</span>
								</div>
							))}
						</div>
					</div>
				</div>
			</section>
		</main>
	</body>
</html>
